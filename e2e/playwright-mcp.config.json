{
  "browser": {
    "type": "chromium",
    "headless": false
  },
  "context": {
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "baseURL": "http://localhost:5173",
    "ignoreHTTPSErrors": false
  },
  "timeouts": {
    "action": 5000,
    "navigation": 30000
  },
  "network": {
    "allowedHosts": ["localhost", "127.0.0.1"]
  },
  "capabilities": {
    "screenshots": true,
    "videos": false,
    "downloads": true
  },
  "security": {
    "isolated": false,
    "userDataDir": null
  }
}
